<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nielsmasdorp.tilewizard">

    <application
        android:name=".TileWizardApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TileWizard"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.nielsmasdorp.tilewizard.presentation.settings.SettingsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.nielsmasdorp.tilewizard.presentation.tiles.FirstTileWizardService"
            android:enabled="false"
            android:icon="@drawable/ic_socket"
            android:label="Socket 1"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name="com.nielsmasdorp.tilewizard.presentation.tiles.SecondTileWizardService"
            android:enabled="false"
            android:icon="@drawable/ic_socket"
            android:label="Socket 2"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name="com.nielsmasdorp.tilewizard.presentation.tiles.ThirdTileWizardService"
            android:enabled="false"
            android:icon="@drawable/ic_socket"
            android:label="Socket 3"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name="com.nielsmasdorp.tilewizard.presentation.tiles.FourthTileWizardService"
            android:enabled="false"
            android:icon="@drawable/ic_socket"
            android:label="Socket 4"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name="com.nielsmasdorp.tilewizard.presentation.tiles.FifthTileWizardService"
            android:enabled="false"
            android:icon="@drawable/ic_socket"
            android:label="Socket 5"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>